<!DOCTYPE html>
<html lang="en">

<!-- Include the common header for login and register -->
<%- include('heading'); %>

<!-- Place script here before closing body -->
<script src="/js/cart.js"></script>
<body class="d-flex flex-column min-vh-100">

    <!-- Include the common header in the Body -->
    <%- include('headerInsideBody'); %>

     <!-- Full-Width Product Section -->
    <div class="container product-container d-flex justify-content-center align-items-center min-vh-100 click-into-page">
        <div class="row w-75 p-4">
            <!-- Product Image Carousel (Left Side) -->
            <div class="col-md-6">
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" style="margin-top: 280px;">
                    <!-- Carousel Indicators (Black) -->
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active black-indicator" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" class="black-indicator" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" class="black-indicator" aria-label="Slide 3"></button>
                    </div>

                    <!-- Carousel Inner -->
                    <div class="carousel-inner text-center">
                        <div class="carousel-item active">
                            <img src="../images/mealworm.png" class="d-block w-100 img-fluid mx-auto" alt="chicken">
                        </div>
                        <div class="carousel-item">
                            <img src="../images/fruitPellet.png" class="d-block w-100 img-fluid mx-auto" alt="pig">
                        </div>
                        <div class="carousel-item">
                            <img src="../images/fruitPellet.png" class="d-block w-100 img-fluid mx-auto" alt="pellet">
                        </div>
                    </div>

                    <!-- Carousel Controls (Black) -->
                    <button class="carousel-control-prev black-controls" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next black-controls" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>

            <!-- Product Details (Right Side) -->
            <div class="col-md-6 d-flex flex-column justify-content-center text-center">
                <h2>Freeze-Dried Mealworm</h2>
                <p class="text-warning">‚≠ê 4.9 | 2.9k Sold</p>
                <h3 class="text-danger">$7.99</h3>

                <!-- Quantity Selector -->
                <div class="text-center">
                    <h5>Quantity:</h5>
                    <input id="quantity" step="1" type="number" value="1" min="1" class="form-control w-50 mb-3 mx-auto text-center">
                </div>

                <!-- Action Buttons -->
                <div >
                    <button class="btn btn-warning btn-lg me-2" onclick="addToCart('Freeze-Dried Mealworm', 7.99, '../public/images/mealworm.png')">üõí Add to Cart</button>
                    <button class="btn btn-danger btn-lg" onclick="buyNow('Freeze-Dried Mealworm', 7.99, '../public/images/mealworm.png')">üí≥ Buy Now</button>
                </div>
            </div>
        </div>
    </div>

    <%- include('footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
